{{#if addNewProduct}}
  <h2>New Product</h2>
   <div>
     <form>
       <div class="form-group">
         <label for="title">Title</label>
         {{input value=title id="title"}}
       </div>

       <div class="form-group">
         <label for="image">Image URL</label>
         {{input value=image id="image"}}
       </div>

       <div class="form-group">
         <label for="description">Description</label>
         {{input value=description id="description"}}
       </div>

       <div class="form-group">
         <label for="cost">Cost</label>
         {{input value=cost id="cost"}}
       </div>

       <button {{action 'saveProduct'}}>Save</button>
       <button {{action 'hideForm'}}>Hide</button>
     </form>
   </div>
{{else}}
  <button {{action 'formShow'}}>New Product</button>
{{/if}}
